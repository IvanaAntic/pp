%option noyywrap yylineno
%{
  #include <string.h>
  #include "project.tab.h"
  
%}

%%

[ \t\n]+             { /* skip */ }

"miris"              { return _PROPERTY; }
"ukus"		           { return _PROPERTY;}
"providnost"	       { return _PROPERTY;}

"("                  { return _LPAREN; }
")"                  { return _RPAREN; }

";"                  { return _SEMICOLON; }
":"                  { return _COLON; }
"="                  { return _ASSIGN; }
"."		     					 { return _DOT;}
","			      			 { return _COMMA;}
"/"		     					 { return _AROP; }
"*"		     					 { return _AROP; }
"+"                  { return _AROP; }
"-"                  { return _AROP; }

"->"                  { return _RELOP; }

[a-zA-Z][a-zA-Z0-9][a-zA-Z ]*  { return _TXT; }
[a-zA-Z][a-zA-Z0-9]* { return _ID; }
[+-]?[0-9]{1,10}     { return _NUMBER;}


\/\/.*               { /* skip */ }
.                    { printf("line %d: LEXICAL ERROR on char %c\n", 
                              yylineno, *yytext);}
%%
